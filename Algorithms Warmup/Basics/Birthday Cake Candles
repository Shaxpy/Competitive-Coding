#include <bits/stdc++.h>
#include <vector>
#include <iostream>
#include <array>

using namespace std;
 int main()
 {
     int n=0,l=0;
     cin>>n;
     int x=0;
     int high=-1;
     for (int i=0;i<n;i++)
        {   
            cin>>l;
            if(high<l)
           { high=l;
            x=1;
           }
            else if(l==high)
            x++;
        }
        cout<<x;



return 0; }
