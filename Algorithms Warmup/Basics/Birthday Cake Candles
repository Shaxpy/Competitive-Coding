#include <bits/stdc++.h>
#include <vector>
#include <iostream>
#include <array>

using namespace std;
 long long ar[100];
 int r=0;
 int i=0;
int main()
{int ab=0;

    long ar_count;
    cin >> ar_count;
    
    for (int i=0;i<ar_count;i++)
    {
        cin>>ar[i];
        if (r<ar[i])
        r=ar[i];
    }

    while (i<ar_count)

    {   
        if (ar[i]==r)
        {ab+=1;}
        i++;
           }
        cout<<ab;
    return 0;
}

